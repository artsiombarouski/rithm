{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com/"
    },
    "version": {
      "allowBranch": "master",
      "ignoreChanges": [
        "**/*.md"
      ]
    }
  },
  "packages": [
    "packages/*"
  ]
}
