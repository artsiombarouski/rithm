{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": false,
    "resolveJsonModule": true,
    "target": "ESNext",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "declaration": true,
    "types": [
      "jest",
      "node",
      "reflect-metadata"
    ],
    "composite": true,
    "module": "ES2022",
    "jsx": "react-native",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "removeComments": false,
    "noLib": false,
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "allowJs": true,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
