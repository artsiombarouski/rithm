{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Rithm",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "jest",
      "node",
      "reflect-metadata"
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
